<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:paddingTop="18dip"
        android:paddingBottom="18dip"
        android:paddingLeft="24dip"
        android:paddingRight="24dip"
        android:background="@drawable/dialog_background">

            <TextView
        android:id="@+id/txtConfirmHeader"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Swipe Your Pin"
        android:textColor="#ffffff"
        android:textSize="18dip"
        android:textStyle="bold"
        android:layout_gravity="fill_horizontal"
        android:gravity="center_horizontal"/>
    <TextView
        android:id="@+id/txtConfirmBody"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="To setup a security pin, connect 4 or more dots using a swiping motion with your finger."
        android:textColor="#ffffff"
        android:textSize="12dip"
        android:layout_gravity="fill_horizontal"
        android:gravity="center_horizontal"/>
      <me.pdthx.CustomLockView
                android:id="@+id/ctrlSecurityPin"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="8dip"
                />
      
      </LinearLayout>
                