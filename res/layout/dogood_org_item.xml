<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/org_item_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="2dip"
        android:paddingLeft="5dip"
        android:paddingTop="2dip"
        android:text="Header"
        android:textStyle="bold"
        android:background="#6E6E6E"
        android:textColor="#ffffff"
        android:textColorHighlight="#ffffff" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#FAFAFA"
        android:layout_height="wrap_content"
        android:layout_margin="2dp" >

        <ImageView
            android:id="@+id/org_item_pic"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:adjustViewBounds="true"
            android:src="@drawable/avatar_unknown" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/org_item_pic"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/org_item_name"
                android:layout_width="wrap_content"
                android:textColor="#545454"
                android:textStyle="bold"
                android:maxWidth="205dp"
                android:layout_height="wrap_content"
                android:text="Organization Name"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/org_item_slogan"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:maxWidth="200dp"
                android:text="Insert slogan here"
                android:textColor="#BFBFBF" />

        </LinearLayout>

        <ImageView
            android:id="@+id/org_item_info"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:clickable="true"
            android:src="@drawable/info_selector" />
    </RelativeLayout>

</LinearLayout>