<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="10dip" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="458dp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/RelativeLayout01"
                android:layout_width="fill_parent"
                android:layout_height="30dp" >
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/relativeLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dip"
                android:background="@drawable/panel_background"
                android:orientation="vertical"
                android:padding="10dp" >

                <LinearLayout
                    android:id="@+id/relativeLayout2"
                    android:layout_width="280dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <ImageView
                            android:id="@+id/imageView1"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/amt_icon" />

                        <EditText
                            android:id="@+id/amount"
                            android:layout_width="122dp"
                            android:layout_height="60dp"
                            android:layout_weight="0.29"
                            android:background="@drawable/to_amount"
                            android:ems="10"
                            android:inputType="numberDecimal" >

                            <requestFocus />
                        </EditText>

                        <Button
                            android:id="@+id/goBtn"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/go_normal" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/editText3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:text="QUICK SEND AMOUNTS" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >

                            <Button
                                android:id="@+id/oneDollar"
                                android:layout_width="70dp"
                                android:layout_height="52dp"
                                android:background="@drawable/btn_amount"
                                android:text="$1" />

                            <Button
                                android:id="@+id/fiveDollar"
                                android:layout_width="70dp"
                                android:layout_height="52dp"
                                android:background="@drawable/btn_amount"
                                android:text="$5" />

                            <Button
                                android:id="@+id/tenDollar"
                                android:layout_width="70dp"
                                android:layout_height="52dp"
                                android:background="@drawable/btn_amount"
                                android:text="$10" />

                            <Button
                                android:id="@+id/twentyDollar"
                                android:layout_width="70dp"
                                android:layout_height="52dp"
                                android:background="@drawable/btn_amount"
                                android:text="$20" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/editText4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:text="AVAILABLE TO SEND TODAY" />

                <EditText
                    android:id="@+id/editText2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Amount to Send" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>