<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1c8839"
    android:gravity="center"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="450dp"
        android:layout_marginBottom="55dp"
        android:background="@drawable/bg_welcome"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="What is PaidThx?"
                android:textColor="#34363d"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:text="A revolutionary new way of exchanging money with friends, family, and your favorite organizations."
                android:textColor="#b2b8ba"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/linearLayout1"
                android:layout_below="@+id/linearLayout1"
                android:layout_marginTop="20dp"
                android:text="Watch this:"
                android:textColor="#34363d"
                android:textSize="14dp"
                android:textStyle="bold" />

            <VideoView
                android:id="@+id/pdthxVideo"
                android:layout_width="280dp"
                android:layout_height="180dp"
                android:layout_marginBottom="20dp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Want to learn more?"
                android:textColor="#34363d"
                android:textSize="14dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/linearLayout1"
            android:layout_below="@+id/linearLayout1" >

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Visit our "
                android:textColor="#b2b8ba"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/knowledgebaseURL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="knowledge base "
                android:textColor="#39a9ae"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="or "
                android:textColor="#b2b8ba"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/faqsURL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FAQs "
                android:textColor="#39a9ae"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="for more info."
                android:textColor="#b2b8ba"
                android:textSize="10dp" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>